= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg


  .field
    = f.label :content
    = f.text_field :content
  .field
    = f.label :image
    = f.file_field :image
  .actions
    = f.submit 'Publish', :name => 'publish', :content => :content
    = f.submit 'Promote', :name => 'promote', :content => :content

