%p#notice= notice

#posts
  %h3 Post
  %p= "#{@post.content}"
  %p= "Current score: #{@post.current_post_score(@post)}"

  %ol
  - @post.comments.each do |comment|
    %li
      = "#{comment.content}"
      = link_to "flag"

  = form_for [@post, @post.comments.build] do |f|
    %p= f.text_area :content, :size => '40x10'
    %p= f.submit "Post comment"

= link_to 'Edit', edit_post_path(@post)
\|
= link_to 'Back', posts_path
