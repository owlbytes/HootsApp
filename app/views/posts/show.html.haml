!!!
%html
  %head
  %body.slideshow
    #slides
      %ul.slides-container
        %li
          %img= if @post.image.present? then image_tag @post.image else image_tag randomized_post_image() end
          .slideshow-container
            .slideshow-contrast
              = "#{@post.content} - #{@post.user.name}"

            %ul#comments
              - @post.comments.order("created_at DESC").limit(5).each do |comment|
                %li= "#{comment.content}"

              = form_for [@post, @post.comments.build] do |f|
                %p= f.text_area :content, :size => '30x5'
                #digits-left Characters left: 70
                %p= f.submit "Post comment", disabled: true

  :javascript
    $(function() {
      $('#slides').superslides({
        scrollable: false
      });
    });

  %footer.footer-bar
    %hr
    .footer-link
      - if current_user.present?
        = link_to image_tag('PNG/thumbs-up.png'), vote_post_path(@post) + "?score=1", method: :put
        = link_to image_tag('PNG/thumbs-down.png'), vote_post_path(@post) + "?score=-1", method: :put
        = link_to image_tag('PNG/star.png'), assign_favourite_post_post_path(@post), method: :put
        = link_to image_tag('PNG/heart.png'), assign_favourite_user_user_path(@post.user), method: :put
      
      - if can? :edit, @post
        = link_to image_tag('PNG/info.png'), edit_post_path(@post)
      
      - if can? :destroy, @post
        = link_to image_tag('PNG/cross.png'), @post, :method => :delete, :data => { :confirm => 'Are you sure?' }
      .footer-score
        = "Post Score: #{@post.score}"

    .footer-link-right
      = link_to 'View Index', posts_path
