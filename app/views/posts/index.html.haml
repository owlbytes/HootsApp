%section.container

  %h1 Hoots

  - @posts.each do |post|
    .post-score
      = "#{post.current_post_score(post)}"
    .post-voting
      = link_to "+" #update to link_to once logic for up/down votes established
      = link_to "-" #update to link_to once logic for up/down votes established      
    .post-comment
      = post.content
    .post-commentcount
      = "Comments: #{post.comment_count}"
    .post-buttons
      = link_to "Flag" 
      = link_to 'Show', post
      = link_to 'Edit', edit_post_path(post)
      = link_to 'Delete', post, :method => :delete, :data => { :confirm => 'Are you sure?' }
    .post-break
      %hr
  
%footer.footer-bar
  %hr
  .footer-link
    = link_to 'New Post', new_post_path


