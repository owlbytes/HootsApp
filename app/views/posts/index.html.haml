%h1 Posts

%table
  %tr
    %th
    %th
    %th

  - @posts.each do |post|
    %tr
      %td= "Current score: #{post.score}"
      %td= post.content
      %td= "Comments: #{post.comment_count}"
      %td= link_to "+", vote_post_path(post) + "?score=1&returnto=index", method: :put
      %td= link_to "-", vote_post_path(post) + "?score=-1&returnto=index", method: :put
      %td= link_to "flag" 
      %td= link_to 'Show', post
      %td= link_to 'Edit', edit_post_path(post)
      %td= link_to 'Destroy', post, :method => :delete, :data => { :confirm => 'Are you sure?' }
%br
    

= link_to 'New Post', new_post_path


