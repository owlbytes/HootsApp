= form_for @post do |f|
  - if @post.errors.any?
    #error_explanation
      %h2= "#{pluralize(@post.errors.count, "error")} prohibited this post from being saved:"
      %ul
        - @post.errors.full_messages.each do |msg|
          %li= msg


  %ul.slides-container    
    %li#new_post
      .post-container
        .post-contrast
          %p#post-text
          

  #post-input
    .field#post-text-area
      = f.text_area :content, :size => '30x5', placeholder: "Hoot..."

    .field#post-image-box
      = f.label :image
      = f.file_field :image
      #digits-left
    .actions
      %input{:type => "submit", :value => "Save", :class => "button", :id => "post_submit"}