.container-myposts
  .my-posts-container
    %h2 My Hoots
    - @posts.each do |post| 
      .post-break
        %hr
      .post-score
        = "#{post.score}"
      .post-comment
        = link_to post.content, post
      .post-commentcount
        = "Comments: #{post.comment_count}"
    .post-break
      %hr

%footer.footer-bar
  %hr
  .footer-link-right
    = link_to 'View Index', posts_path