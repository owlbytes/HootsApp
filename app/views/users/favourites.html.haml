.container-favs
  .favs-container-1
    %h2 Favourite Hoots
    - @top_posts.each do |post|
      .post-break
        %hr
      .post-score
        = "#{post.score}"
      .post-comment
        = link_to post.content, post
      .post-commentcount
        = "Comments: #{post.comment_count} | #{post.user.name}"
    .post-break
      %hr

  .favs-container-2
    %h2 Favourite Hootsters
    %ul
      - @top_users.each do |user|
        %li
          =user.name

%footer.footer-bar
  %hr
  .footer-link-right
    = link_to 'View Index', posts_path


