.container-leaderboard
  .leaderboard
    %h2 Hootsterboard

    %ol
      - @users.each do |user|
        %li
          .user
            =user.name
            \- total score:
            =user.score
            \| top scoring hoot:
            =user.top_score
          .user-score
            = link_to image_tag('PNG/heart.png'), assign_favourite_user_user_path(user), method: :put

%footer.footer-bar
  %hr
  .footer-link-right
    = link_to 'View Index', posts_path